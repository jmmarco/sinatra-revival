<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2>Edit a book</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <form class="" action="/books/<%= @book['id'] %>" method="post">
      <!-- Trick to get the put method working in Sinatra -->
      <input type="hidden" name="_method" value="PATCH">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title" placeholder="Top Tips" value="<%= @book['title'] %>">
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input class="form-control" type="text" name="author" placeholder="James May" value="<%= @book['author'] %>">
      </div>
      <div class="form-group">
        <label for="book-cover">Book cover</label>
        <input class="form-control" type="text" name="book-cover" value="<%= @book['book_cover'] %>">
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/books/<%= @book['id'] %>" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</div>
